{
  "ts-node": {
    "require": ["tsconfig-paths/register"]
  },
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "outDir": "./build",
    "strict": true,
    "esModuleInterop": true,
    "types": ["node"],
    "typeRoots": ["./src/types", "./node_modules/@types"],
    "paths": {
      "@Common/*": ["../Common/*"]
    }
  },
  "include": ["src/**/*.ts", "../Common/**/*.ts"],
  "exclude": ["node_modules"]
}
