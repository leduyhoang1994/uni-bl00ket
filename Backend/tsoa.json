{
    "entryFile": "./src/app.ts",
    "noImplicitAdditionalProperties": "throw-on-extras",
    "controllerPathGlobs": [
        "./src/controllers/**/*.controller.ts",
        "../Common/**/*.ts"
    ],
    "spec": {
        "outputDirectory": "./src",
        "specVersion": 3,
        "securityDefinitions": {
            "bearerAuth": {
                "type": "http",
                "scheme": "bearer",
                "bearerFormat": "JWT"
            },
            "apiKey": {
                "type": "apiKey",
                "name": "x-api-key",
                "in": "header"
            }
        }
    },
    "routes": {
        "routesDir": "./src",
        "authenticationModule": "./src/authentication.ts"
    },
    "compilerOptions": {
        "paths": {
            "@Common/*": [
                "../Common/*"
            ]
        }
    }
}